    {
        :hostname => "ogu2204S",
        :box => "generic/ubuntu2204",
		:aanbieder => "Oracle",
        :ram => 2048,
        :cpu => 2
    },      
	{
        :hostname => "vgu2204S",
        :box => "generic/ubuntu2204",
		:aanbieder => "VMware",
        :ram => 2048,
        :cpu => 2
    },
    {
        :hostname => "ogu2204M",
        :box => "generic/ubuntu2204",
		:aanbieder => "Oracle",
        :ram => 4096,
        :cpu => 2
    },	  
    {
        :hostname => "vgu2204M",
        :box => "generic/ubuntu2204",
		:aanbieder => "VMware",
        :ram => 4096,
        :cpu => 2
    },
	{
       :hostname => "ogu2204L",
       :box => "generic/ubuntu2204",
	   :aanbieder => "Oracle",
